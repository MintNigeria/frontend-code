pipeline {
    agent any

    stages {
        stage('Deploy with Ansible') {
            environment {
                ANSIBLE_HOST = 'localhost'
                ANSIBLE_USER = 'VAC_Admin'
                ANSIBLE_PASS = 'Be verified$'
            }
            steps {
                withCredentials([usernamePassword(credentialsId: 'ANSIBLE_PRIVATE_KEY', usernameVariable: 'VAC_Admin', passwordVariable: ${ANSIBLE_PASS})]) {
                    sh """
                    ansible-playbook -i ${ANSIBLE_HOST}, --user ${ANSIBLE_USER} --private-key /home/VAC_Admin/ansible_private_key
                    """
                }
            }
        }

        stage('Build and Start Docker Containers') {
            steps {
                sh 'docker-compose -f /var/lib/jenkins/workspace/ngmintclient/ansible/docker-compose.yml up -d --force-recreate'
            }
        }
    }
}
