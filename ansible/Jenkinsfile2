pipeline {
    agent any

    stages {
        stage('Deploy with Ansible') {
            environment {
                ANSIBLE_HOST = 'localhost'
                ANSIBLE_USER = 'VAC_Admin'
            }
            steps {
                withCredentials([usernamePassword(credentialsId: 'TOSH', usernameVariable: 'ANSIBLE_USER', passwordVariable: 'ANSIBLE_PASSWORD')]) {
                    script {
                        sh '''
                        ansible-playbook -i ${env.ANSIBLE_HOST}, --user ${env.ANSIBLE_USER} --ask-pass ansible/playbook.yml
                        '''
                    }
                }
            }
        }

        stage('Build and Start Docker Containers') {
            steps {
                sh 'docker-compose -f /var/lib/jenkins/workspace/ngmintclient/ansible/docker-compose.yml up -d --force-recreate'
            }
        }
    }
}
